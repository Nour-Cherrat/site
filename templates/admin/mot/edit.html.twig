{% extends'base.html.twig' %}

{%  block title 'Editer mot doyen' %}

{% block body %}

    <div class="container mt-4" style="width: 60%">
        <div class="jumbotron text-center">
            <h1>Editer mot doyen</h1>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-8">{{ form_row(form.quote) }}</div>
            <div class="col-md-4">{{ form_row(form.imageFile) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.motD) }}</div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-primary">Editer</button>
        {{ form_end(form) }}
    </div>




{% endblock %}