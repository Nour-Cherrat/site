                    <h4 class="modal-title">Informations de contact</h4>
                </div>
                <div class="modal-body customer-box">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs">
                        <li><a class="active" href="#Login" data-toggle="tab">Contact</a></li>
                        <li><a href="#Registration" data-toggle="tab">Map</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="Login" style="text-align: center">
                            <p>B.P 549, Av.Abdelkarim Elkhattabi, Gu√©liz Marrakech</p>
                            <p>+212 524 43 34 04</p>
                        </div>
                        <div class="tab-pane" id="Registration">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3396.609013922801!2d-8.022468985513619!3d31.644553948167047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xdafee9eb5090999%3A0x2dca05e37a64f83b!2sFacult%C3%A9%20des%20Sciences%20et%20Techniques!5e0!3m2!1sfr!2sma!4v1592311195955!5m2!1sfr!2sma" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- LOADER -->
    <div id="preloader">
        <div class="loader-container">
            <div class="progress-br float shadow">
                <div class="progress__item"></div>
            </div>
        </div>
    </div>
    <!-- END LOADER -->

    <!-- Start header -->
    <header class="top-navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="images/logo/logo-fstg.png" style="width: 200px" alt="" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-host" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbars-host">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Accueil</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Presentation </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown-a">
                                <a class="dropdown-item" href="{{ path('about') }}">FSTG en bref </a>
                                <a class="dropdown-item" href="{{ path('motDoyen') }}">Mot du doyen </a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Formation </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown-a">
                                <a class="dropdown-item" href="#">TC </a>
                                <a class="dropdown-item" href="#">LST </a>
                                <a class="dropdown-item" href="#">Cycle </a>
                                <a class="dropdown-item" href="#">M </a>
                                <a class="dropdown-item" href="#">PHD </a>
                            </div>
                        </li>
                        <li class="nav-item active dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Annonces </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown-a">
                                <a class="dropdown-item" {% if current_menu is defined and current_menu == 'annonces' %} active {% endif %} href="{{ path('annonces', {categorie: 1}) }}">Administration </a>
                                <a class="dropdown-item" {% if current_menu is defined and current_menu == 'annonces' %} active {% endif %} href="{{ path('annonces', {categorie: 2}) }}">Etudiant </a>
                                <a class="dropdown-item" {% if current_menu is defined and current_menu == 'annonces' %} active {% endif %} href="{{ path('annonces', {categorie: 3}) }}">Manifestation </a>
                                <a class="dropdown-item" {% if current_menu is defined and current_menu == 'annonces' %} active {% endif %} href="{{ path('annonces', {categorie: 4}) }}">Para-universitaire </a>
                            </div>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('contact') }}">Contact</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="hover-btn-new log" href="#" data-toggle="modal" data-target="#login"><span>Info</span></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- End header -->

    <div class="all-title-box" style="background-image: url('images/logo/banner.jpg')">
        <div class="container text-center">
            <h1>Blog Single<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
        </div>
    </div>

    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
                        <div class="image-blog">
                            {% if annonce.filename %}
                                <img src="{{ vich_uploader_asset(annonce, 'imageFile') | imagine_filter('medium') }}" alt="" class="img-fluid" style="width: 100%; height: 500px;">
                            {% else %}
                                <img src="{{ '/images/annonces/empty.png' | imagine_filter('medium') }}" alt="" class="img-fluid" style="width: 100%; height: 500px;">
                            {% endif %}
                        </div>
                        <div class="post-content">
                            <div class="post-date">
                                <span class="day">{{ annonce.date |date("d") }}</span>
                                <span class="month">
                                    {% if  annonce.date |date("m")  == 01 %} JAN
                                    {% elseif annonce.date |date("m")  == 02 %} FEB
                                    {% elseif annonce.date |date("m")  == 03 %} MAR
                                    {% elseif annonce.date |date("m")  == 04 %} APR
                                    {% elseif annonce.date |date("m")  == 05 %} MAI
                                    {% elseif annonce.date |date("m")  == 06 %} JUN
                                    {% elseif annonce.date |date("m")  == 07 %} JUL
                                    {% elseif annonce.date |date("m")  == 08 %} AUG
                                    {% elseif annonce.date |date("m")  == 09 %} SEP
                                    {% elseif annonce.date |date("m")  == 10 %} OCT
                                    {% elseif annonce.date |date("m")  == 11 %} NOV
                                    {% elseif annonce.date |date("m")  == 12 %} DEC
                                    {% endif %}
                                </span>
                            </div>
                            <div class="meta-info-blog">
                                <span><i class="fa fa-calendar"></i> <a href="#">{{ annonce.date |date("d/m/Y") }}</a> </span>
                                <span><i class="fa fa-tag"></i>  <a href="#">{{ annonce.categorieType }}</a> </span>
                            </div>
                            <div class="blog-title">
                                <h2><a href="#" title="">{{ annonce.titre }}</a></h2>
                            </div>
                            <div class="blog-desc">
                                {% if annonce.pdfname %}
                                    <a href="{{ vich_uploader_asset(annonce, 'pdfFile') }}">{{ annonce.pdfname}}</a> <br>
                                {% endif %}
                                <br>
                                <blockquote class="default">
                                    <p>{{ annonce.description}}</p>
                                </blockquote>
                            </div>
                        </div>
                    </div>



                </div><!-- end col -->
                <div class="col-lg-3 col-12 right-single">
                    <div class="widget-search">
                        <div class="site-search-area">
                            <form method="get" id="site-searchform" action="#">
                                <div>
                                    <input class="input-text form-control" name="search-k" id="search-k" placeholder="Search keywords..." type="text">
                                    <input id="searchsubmit" value="Search" type="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget-categories">
                        <h3 class="widget-title">Categories</h3>
                        <ul>
                            <li><a href="{{ path('annonces', {categorie: 1}) }}">Administration</a></li>
                            <li><a href="{{ path('annonces', {categorie: 2}) }}">Etudiant</a></li>
                            <li><a href="{{ path('annonces', {categorie: 3}) }}">Manifestation</a></li>
                            <li><a href="{{ path('annonces', {categorie: 4}) }}">Para-universitaire</a></li>
                        </ul>
                    </div>
                    <div class="widget-tags">
                        <h3 class="widget-title">Search Tags</h3>
                        <ul class="tags">
                            <li><a href="#"><b>business</b></a></li>
                            <li><a href="#"><b>jquery</b></a></li>
                            <li><a href="#">corporate</a></li>
                            <li><a href="#">portfolio</a></li>
                            <li><a href="#">css3</a></li>
                            <li><a href="#"><b>theme</b></a></li>
                            <li><a href="#"><b>html5</b></a></li>
                            <li><a href="#"><b>mysql</b></a></li>
                            <li><a href="#">multipurpose</a></li>
                            <li><a href="#">responsive</a></li>
                            <li><a href="#">premium</a></li>
                            <li><a href="#">javascript</a></li>
                            <li><a href="#"><b>Best jQuery</b></a></li>
                        </ul>
                    </div>
                </div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->



    </body>
    </html>




{% endblock %}